<h1>PIRATES</h1>
<div class="pirate">
<h3>Name: <%= @pirate.name %></h3>
<h4>Grade: <%= @pirate.height %></h4>
<h4>Grade: <%= @pirate.weight %></h4>
</div><br>

<h1>SHIPS</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
<% end %>
